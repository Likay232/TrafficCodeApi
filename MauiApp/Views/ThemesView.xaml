<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiApp.ViewModels"
             xmlns:dto="clr-namespace:MauiApp.Infrastructure.Models.DTO;assembly=MauiApp.Infrastructure"
             x:Class="MauiApp.Views.ThemesView"
             x:DataType="viewModel:ThemesViewModel"
             BackgroundColor="White">

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Model}"
                        SelectionMode="Single"
                        SelectionChanged="SelectableItemsView_OnSelectionChanged"
                        BackgroundColor="White">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dto:Theme">
                    <Frame Padding="15"
                           Margin="10"
                           BackgroundColor="White"
                           BorderColor="#DDD"
                           CornerRadius="10"
                           HasShadow="True">
                        
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnThemeTapped" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        
                        <VerticalStackLayout Spacing="15" HorizontalOptions="FillAndExpand">
                            <!-- Заголовок -->
                            <Label Text="{Binding Title}" 
                                   FontSize="20" 
                                   HorizontalOptions="Center" />

                            <Label Text="{Binding Description}" 
                                   FontSize="14"
                                   TextColor="#666"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   Margin="0,0,0,10" />

                            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" WidthRequest="250">

                                <Button Text="Задания"
                                        FontSize="14"
                                        Padding="10,6"
                                        CornerRadius="8"
                                        BackgroundColor="#E6F4EA"   
                                        TextColor="#2E7D32"         
                                        WidthRequest="120"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnTasksClicked" />

                                <Button Text="Материалы"
                                        FontSize="14"
                                        Padding="10,6"
                                        CornerRadius="8"
                                        BackgroundColor="#E3F2FD"   
                                        TextColor="#1565C0"         
                                        WidthRequest="120"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnMaterialsClicked" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
